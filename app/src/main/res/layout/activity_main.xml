<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/progressTitleRTL"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <com.bnation.progress.ProgressView
            android:id="@+id/fillShapeViewApi1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layerType="software"
            app:backgroundColor="@color/colorGray"
            app:direction="rtl"
            app:max="100"
            app:progress="50"
            app:progressColor="@color/result_red"
            app:radius="10dp"
            app:strokeColor="@color/result_blue"
            app:textPadding="10dp"
            app:textFont="@string/montague"
            app:textSize="15sp" />
    </LinearLayout>

    <Button
        android:id="@+id/progressBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="Animate" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="100dp"
        android:padding="32dp"
        android:progress="60"
        android:visibility="visible" />

</FrameLayout>
